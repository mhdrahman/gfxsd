<div id="spinnerContainer">
    <div hidden id="spinner"></div>
</div>
<div id="dimmer"></div>
<div id="error-modal-container" class="modal-container">
    <div id="error-modal" class="modal-gfxsd">
        <div class="modal-buttons">
            <h3>Error occured</h3>
            <button id="error-modal-close-button" class="modal-button"><h3>X</h3></button>
        </div>
        <div id="error-modal-content"></div>
    </div>
</div>
<div id="login-modal-container" class="modal-container">
    <div id="login-modal" class="modal-gfxsd">
        <div class="modal-buttons">
            <h3>Login</h3>
            <button id="login-modal-close-button" class="modal-button"><h3>X</h3></button>
        </div>
        <div id="login-modal-content" class="modal-content">
            <div class="form-field">
                <label for="username">Username:</label>
                <input type="text" id="username"/>
            </div>
            <div class="form-field">
                <label for="password">Password:</label>
                <input type="password" id="password"/>
            </div>
            <button id="login-modal-submit-button">Login</button>
        </div>
    </div>
</div>
<div id="navbar" class="navbar">
    <div>
        <h1 class="logo">GFXSD</h1>
    </div>
    <div class="navbar-buttons">
        <button id="generate-xml-button" class="navbar-button">Generate XML</button>
        <button id="clean-xml-button" class="navbar-button">Clean XML</button>
        <button id="login-button" class="navbar-button login-button">Login</button>
    </div>
</div>
<div id="content-container">
    <div id="editors-container">
        <div class="tab-links-container">
            <button id="SchemaButton" class="tab-link">Schema</button>
            <button id="OutputXmlButton" class="tab-link">Output XML</button>
        </div>
        <div id="Schema" class="editor"></div>
        <div id="OutputXml" class="editor"></div>
    </div>
</div>
