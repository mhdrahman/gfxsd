<div id="spinnerContainer">
    <div hidden id="spinner"></div>
</div>
<div class="maincontainer">
    <div class="tabscontainer">
        <div class="tablinks">
            <button id="openSchemaButton" class="tablink" onclick="openSchema()">Schema</button>
            <button id="openOutputCSharpButton" class="tablink" onclick="openOutputCSharp()">Output C#</button>
            <button id="openOutputXmlButton" class="tablink" onclick="openOutputXml()">Output XML</button>
        </div>
        <div id="Schema" class="tabcontent">
            <textarea id="schemaTextArea" placeholder="Enter the XML Schema here" spellcheck="false"></textarea>
        </div>
        <div id="OutputCSharp" class="tabcontent">
            <textarea id="outputCSharpTextArea" placeholder="Generated C# will go here" spellcheck="false"></textarea>
        </div>
        <div id="OutputXml" class="tabcontent">
            <textarea id="outputXmlTextArea" placeholder="Generated XML will go here" spellcheck="false"></textarea>
        </div>
    </div>
    <div class="controlscontainer">
        <p>Tools</p>
        <button id="generateXmlButton" onclick="generateXml()" class="controlbtn">Generate XML</button>
    </div>
</div>