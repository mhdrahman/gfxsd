<div id="spinnerContainer">
    <div hidden id="spinner"></div>
</div>
<div class="maincontainer">
    <div class="tabscontainer">
        <div class="tablinks">
            <button id="SchemaButton" class="tablink" onclick="openTab('Schema')">Schema</button>
            <button id="OutputCSharpButton" class="tablink" onclick="openTab('OutputCSharp')">Output C#</button>
            <button id="OutputXmlButton" class="tablink" onclick="openTab('OutputXml')">Output XML</button>
        </div>
        <div id="Schema" class="tabcontent">
            <textarea id="schemaTextArea" placeholder="Enter the XML Schema here" spellcheck="false"></textarea>
        </div>
        <div id="OutputCSharp" class="tabcontent">
            <textarea id="outputCSharpTextArea" placeholder="Generated C# will go here" spellcheck="false" readonly></textarea>
        </div>
        <div id="OutputXml" class="tabcontent">
            <textarea id="outputXmlTextArea" placeholder="Generated XML will go here" spellcheck="false" readonly></textarea>
        </div>
    </div>
    <div class="controlscontainer">
        <button onclick="generateXml(false)" class="controlbtn">Generate XML (Recommended)</button>
        <button onclick="generateXml(true)" class="controlbtn">Generate C# and XML</button>
        <button onclick="cleanXml()" class="controlbtn">Clean XML</button>
    </div>
</div>